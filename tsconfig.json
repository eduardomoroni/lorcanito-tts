{
  "compilerOptions": {
    "strict": false,
    "noImplicitReturns": false,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["cypress", "@testing-library/cypress", "jest"],
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext", "ES2023"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@/spaces/*": ["./src/client/*"],
      "@/*": ["./src/client/studio/*"],
      "@lorcanito/engine": ["./engine/src/index.ts"],
      "@lorcanito/engine/*": ["./engine/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    ".next/types/**/*.ts",
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs"
  ],
  "exclude": ["**/node_modules", "**/**/node_modules", "**/dist"]
}
